#:kivy 2.3.0

#:import AddEntry groshy.gui.utils
#:import ScreenType groshy.gui.utils.ScreenType

<RecipeLabel>:
    text: ''
    size_hint: 0.3, None
    height: 40

<CookBookToCScreen>:
    id: toc_screen
    RelativeLayout:
        size_hint: 0.95, 0.95
        pos_hint: {'top': 1}

        AddEntry:
            pos_hint: {'top': 0.97, 'right': 0.85}
            on_press: app.screen_manager.create_new_recipe()

        Label:
            id: cookbook_title
            size_hint: 1, None
            height: self.font_size
            pos_hint: {'top': 0.87, 'center_x': 0.5}
            text: ''
            font_size: '24sp'
            underline: True
            bold: True

        GridLayout:
            id: recipe_box
            size_hint: 0.85, 0.6
            pos_hint: {'top': 0.8, 'center_x': 0.5, 'bottom': 0.7}
            cols: 1
            padding: 10
            spacing: 20

            Label:
                size_hint: 0.5, None
                height: self.font_size
                pos_hint: {'top': 0.8, 'center_x': 0.5}
                text: 'Table of Contents'
                font_size: '16sp'
                underline: True
                italic: True

        Button:
            pos_hint: {'bottom': 1, 'center_x': 0.5}
            size_hint: 0.4, None
            height: 60
            text: 'Back'
            on_press: root.parent.change_screen(screen_name='bookshelf', screen_type=ScreenType.BOOKSHELF, dt=0.5)



