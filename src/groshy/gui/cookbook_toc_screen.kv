#:kivy 2.3.0

<RecipeLabel>:
    text: ''
    pos_hint: {'top': 1}

<CookBookToCScreen>:
    id: toc_screen
    RelativeLayout:
        Button:
            pos_hint: {'top': 1, 'right': 1}
            text: 'Add Recipe'
            on_press: app.screen_manager.create_new_recipe()

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: toc_screen.cookbook_data.name
                underline: True
                bold: True

            BoxLayout:
                id: recipe_box
                orientation: 'vertical'
                padding: 10
                spacing: 15




