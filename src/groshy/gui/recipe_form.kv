#:kivy 2.3.0

#:import TextAndLabel groshy.gui.utils
#:import IngredientEntry groshy.gui.recipe_form_utils
#:import IngredientBox groshy.gui.recipe_form_utils


<RecipeForm>:
    size_hint: 0.8, 0.9
    auto_dismiss: False
    title: "Recipe Writer"
    title_text_bold: True
    title_align: 'center'
    BoxLayout:
        orientation: 'vertical'
        RelativeLayout:
            Button:
                size_hint: 0.2, None
                height: urlbox.height
                pos_hint: {'left': 1, 'bottom': 1}
                text: "Cancel"
                on_press: root.dismiss()

            Button:
                id: submit_recipe
                size_hint: 0.2, None
                height: urlbox.height
                disabled: False
                pos_hint: {'right': 1, 'bottom': 1}
                text: "Submit"
                #on_press: root.sm.add_recipe_screen()

            TextInput:
                id: urlbox
                pos_hint: {'center_x': 0.5, 'bottom': 1}
                size_hint: 0.5, None
                height: self.minimum_height
                text_halign: 'center'

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: 1, 0.85
                pos_hint: {'top': 0.97}
                scroll_distance: (scrollbox.height - 300)/15

                BoxLayout:
                    id: scrollbox
                    size_hint_y: None
                    height: dp(900)
                    spacing: dp(8)
                    padding: 3
                    orientation: 'vertical'



