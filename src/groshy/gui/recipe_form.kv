#:kivy 2.3.0

<TextAndLabel>:
    size_hint: .9, .2
    orientation: 'horizontal'
    spacing: 5

    Label:
        id: data_name
        size_hint: 0.2, 0.2
        font_size: '14sp'
        text: ''
    TextInput:
        id: data_entry
        size_hint: 0.8, 0.2
        font_size: '14sp'



<RecipeForm>:
    size_hint: 0.8, 0.9
    auto_dismiss: False
    title: "Recipe Writer"
    title_text_bold: True
    BoxLayout:
        orientation: 'vertical'
        RelativeLayout:
            Button:
                size_hint: 0.2, 0.1
                pos_hint: {'left': 1, 'bottom': 1}
                text: "Cancel"
                on_press: root.dismiss()

            Button:
                id: submit_recipe
                size_hint: 0.2, 0.1
                disabled: False
                pos_hint: {'right': 1, 'bottom': 1}
                text: "Submit"
                on_press: root.sm.add_recipe_screen()

            TextAndLabel:
                id: urlbox
                pos_hint: {'center_x': 0.5, 'bottom': 1}
                self.data_name.text = "Recipe Url"
                self.data_name.hint_text = "Paste Url here to save online recipe..."




            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                size_hint: 1, 0.85
                pos_hint: {'top': 1}
                scroll_distance: 50

                BoxLayout:
                    id: scrollbox
                    size_hint_y: None
                    height: dp(1000)
                    spacing: 20
                    orientation: 'vertical'



