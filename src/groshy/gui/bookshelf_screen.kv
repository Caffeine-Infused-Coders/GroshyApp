#:kivy 2.3.0

<BookShelfScreen>:
    RelativeLayout:
        Button:
            pos_hint: {'right': 1, 'top': 1}
            text: "Add Cookbook"

        BoxLayout:
            orientation: 'vertical'
            spacing: 50
            padding: 20

            Label:
                text: "The BookShelf"
                size_hint: 1, None
                height: 20
                font_size: '24sp'
                bold: True
                halign: 'center'
                valign: 'top'

            GridLayout:
                id: cookbooks
                cols: 3
                spacing: 10, 10
                padding: [10, 10, 10, 10]
