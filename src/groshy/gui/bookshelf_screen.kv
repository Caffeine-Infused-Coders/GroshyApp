#:kivy 2.3.0

<BookShelfScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        padding: 20

        Label:
            text: "The BookShelf"
            size_hint: 1, None
            height: 20
            font_size: '24sp'
            bold: True
            halign: 'center'
            valign: 'top'
        
        GridLayout:
            id: cookbooks
            cols: 3
            spacing: 10, 10
            padding: [10, 10, 10, 10]

        Button:
            text: "Back to Main Menu"
            size_hint: 0.5, None
            center_x: root.center_x
            height: 50
            border: (20, 20, 20, 20)
            on_press: cookbooks.clear_widgets()
            on_press: root.manager.current = 'main_menu'
