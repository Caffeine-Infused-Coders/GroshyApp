#:kivy 2.3.0

#:import AddEntry groshy.gui.recipe_form_utils

<CookBookButton>:
    size_hint: 0.8, 0.8
    on_press: print(self.text)


<BookShelfScreen>:
    RelativeLayout:
        BoxLayout:
            orientation: 'vertical'
            spacing: 50
            padding: 20
            AddEntry:
                pos_hint: {'top': 0.9, 'right': 0.95}
                on_press: root.parent.create_new_cookbook()

            Label:
                text: "The BookShelf"
                size_hint: 1, None
                height: 40
                font_size: '24sp'
                bold: True
                halign: 'center'
                valign: 'top'

            GridLayout:
                id: cookbooks
                size_hint: 0.7, 0.8
                pos_hint: {'center_x': 0.5}
                cols: 1
                spacing: 20, 20
                padding: [10, 10, 10, 30]
