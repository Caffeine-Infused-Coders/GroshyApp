#:kivy 2.3.0

<CookbooksView>:
    orientation: 'vertical'

    Label:
        text: "Cookbooks"
        size_hint: 1, None
        height: 50
        font_size: '24sp'
        bold: True
        halign: 'center'
        valign: 'middle'

    ScrollView:
        size_hint: 1, 1

        GridLayout:
            id: cookbooks_layout
            cols: 1
            size_hint_y: None
            spacing: 10
            padding: 20
            height: self.minimum_height

    Button:
        text: "Back to Main Menu"
        size_hint: 1, None
        height: 50
        background_normal: ''
        background_color: (0.8, 0.1, 0.1, 1)
        border: (20, 20, 20, 20)
        on_press: root.back_to_main_menu()
