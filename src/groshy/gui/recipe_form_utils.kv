#:kivy 2.3.0

#:import AddEntry groshy.gui.utils

<EntryBox>:
    size_hint: 0.8, None
    height: self.minimum_height
    pos_hint: {'center_x': 0.5}


<IngredientEntry>:
    orientation: 'horizontal'
    size_hint: 0.8, None
    height: self.minimum_height
    pos_hint: {'center_x': 0.5}

    TextInput:
        id: ing_name
        size_hint: 1, None
        height: self.minimum_height
        hint_text: 'Ingredient Name'
        multiline: False

    TextInput:
        id: qty_box
        size_hint: 0.3, None
        height: self.minimum_height
        hint_text: 'Qty.'
        multiline: False

    TextInput:
        id: qty_unit
        size_hint: 0.3, None
        height: self.minimum_height
        hint_text: 'Unit'
        multiline: False


<MultiEntryBox>:
    size_hint: 0.6, None
    height: self.minimum_height
    pos_hint: {'center_x': 0.5}
    orientation: 'vertical'
    spacing: dp(5)

    AddEntry:
        on_press: self.parent.add_another_entry()


<MultiEntryBoxGrid>:
    rows: 2
    size_hint: 0.9, None
    height: self.minimum_height

    Label:
        id: data_name
        size_hint: 0.2, None
        text_size: self.size
        font_size: '14sp'
        height: self.font_size
        halign: 'left'
        valign: 'bottom'
        text: ''
