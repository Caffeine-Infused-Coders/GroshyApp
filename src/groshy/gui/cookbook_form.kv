#:kivy 2.3.0

<CookBookForm>:

    size_hint: 0.4, 0.4
    auto_dismiss: False
    title: "CookBook Creator"
    title_text_bold: True

    BoxLayout:
        orientation: 'vertical'

        TextInput:
            id: name_box
            size_hint: 1, 0.3
            hint_text: "Enter Cookbook Name Here..."
            multiline: False
            on_text_validate: root.name_validator()

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10

            Button:
                size_hint: 0.4, 0.3
                pos_hint: {'center_x': root.width / 4}
                text: "Cancel"
                on_press: root.dismiss()

            Button:
                id: submit_name
                size_hint: 0.4, 0.3
                disabled: False
                pos_hint: {'center_x': root.width * 3/4}
                text: "Submit"
                on_press: root.name_validator()

