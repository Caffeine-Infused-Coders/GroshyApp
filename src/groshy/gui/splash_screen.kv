#:kivy 2.3.0

<SplashScreen>:
    splash_info: splash_info

    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        padding: 20
        AnchorLayout:
            Label:
                text: "Welcome to Groshy!!"
                anchor_x: root.center
                anchor_y: root.top

        AnchorLayout:
            Label:
                id: splash_info
                anchor_x: root.center
                anchor_y: root.center
                text: "loading existing cookbooks..."
