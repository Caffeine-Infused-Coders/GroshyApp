#:kivy 2.3.0

<SplashScreen>:

    BoxLayout:
        orientation: 'vertical'
        spacing: 1
        padding: [50, 20, 50, 200]

        AnchorLayout:
            anchor_x: 'center'
            Label:
                text: "Welcome to Groshy!!"
                anchor_y: root.top

        Label:
            id: splash_info
            text: ""
        
        Button:
            id: get_started
            size_hint: 0.3, 0.3
            pos_hint: {'center_x': 0.5}
            text: "Create your 1st Cookbook!"
            opacity: 0
            disabled: True
            
